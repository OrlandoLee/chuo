<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,class: "form-sign", role: "form" }) do |f| %>
<%= devise_error_messages! %>
<%= f.email_field :email, autofocus: true, class: 'form-control',placeholder: 'Email' %>
<%= f.submit "Send me reset password instructions", class: 'btn btn-default btn-xlarge btn-block' %>
<% end %>
</form>