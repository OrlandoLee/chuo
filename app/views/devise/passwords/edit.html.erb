<h2 class="form-signin-heading">Change your password</h2>
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put,class: "form-signin", role: "form" }) do |f| %>
		  <%= devise_error_messages! %>
		  <%= f.hidden_field :reset_password_token %>
				    <%= f.password_field :password, autocomplete: "off", class: 'form-control',placeholder: 'Password'%>
				    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control',placeholder: 'Password Confirmation'%>
              <%= f.submit "Change my password", class: 'btn btn-primary btn-lg btn-block' %>
             <% end %>
			<%= render "devise/shared/links" %>
          </form>

