<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>
$(document).ready(function(){
	$("#invitation_button").click(function(e){
		var code = $("#invitation_code").val()
		if (code != "wudaokou" && code != "dalinfen")
		{
			alert("对不起您的邀请码不正确");
			e.preventDefault();
		} 
	    });
});
</script>


		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-sign", role: "form"} ) do |f| %>
		  <%= devise_error_messages! %>	
				  <%= f.email_field :email, autofocus: true, class: 'form-control',placeholder: '邮箱' %>
				    <%= f.password_field :password, autocomplete: "off", class: 'form-control',placeholder: '密码(不小于8位)'%>
				    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control',placeholder: '再次输入密码'%>
              <input type="text" class="form-control input-lg" id="invitation_code" placeholder="邀请码">
              <%= f.submit "注册", class: 'btn btn-default btn-lg btn-block', id: 'invitation_button'%>
             <% end %>
			<div class="link-sign">
				<%=link_to '登录已有账号',new_user_session_path, {:style=>'color:#FFFFFF;'} %>
			</div>
          </form>

		<script type="text/javascript">
		mixpanel.track('user goes to sign up page');
		</script>


